<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, local: true do |f| %>
  <table>
    <tbody>
      <tr>
        <th>商品画像</th>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>サイズ</th>
        <td>H: <%= f.text_field :size_height %></td>
        <td>W: <%= f.text_field :size_width %></td>
      </tr>
      <tr>
        <th>発送方法</th>
        <td><%= f.text_field :shipping_method %></td>
      </tr>
      <tr>
        <th>税込価格</th>
        <td><%= f.text_field :price %> 円</td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "変更" %>
  <%= link_to "削除", admin_item_path(@item.id), method: :delete %>
<% end %>
