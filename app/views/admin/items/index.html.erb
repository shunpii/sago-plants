<h1>商品一覧</h1>

<%= link_to "商品登録", new_admin_item_path %>

<div class="item-list">
  <% @items.each do |item| %>
    <%= link_to admin_item_path(item.id) do %>
      <div class="item-text">
        <div><%= attachment_image_tag item, :image, size: "350x300",　format: 'jpeg' %></div>
        <div><%= item.name %></div>
        <div><%= item.price %>円</div>
      </div>
    <% end %>
  <% end %>
</div>
