<div class="item-list">
  <h3><%= link_to "商品登録", new_admin_item_path %></h3>
  <div class="item-list__item">
    <% @items.each do |item| %>
      <div class="item-list__item--content">
        <%= link_to admin_item_path(item.id) do %>
          <div><!--商品画像の一枚目を表示-->
            <% item.item_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, class: "item-list__item--content-image" %>
            <% end %>
          </div>
        <% end %>
        <!--商品名の表示-->
        <div><%= item.name %></div>
        <!--商品価格の表示-->
        <div><%= number_to_currency(item.price) %></div>
      </div>
    <% end %>
  </div>
</div>

