<div><%= link_to "一覧へ戻る", admin_items_path %></div>
<div class="item-detail">
  <div>
    <div>
      <%= attachment_image_tag @item.item_images[0], :image, size: "450x400", id: 'item-image' %>
    </div>
    <div>
      <% @item.item_images.each do |image| %>
        <a class="item-image-mini"><%= attachment_image_tag image, :image, size: "150x150" %></a>
      <% end %>
    </div>
  </div>
  <div>
    <ul class="item-detail__item">
      <li class="item-detail__item--content"><%= @item.name %></li>
      <li class="item-detail__item--content">H :<%= @item.size_height %>cm W :<%= @item.size_width %>cm</li>
      <li class="item-detail__item--content"><%= @item.introduction %></li>
      <li class="item-detail__item--content">¥<%= @item.price %></li>
      <li class="item-detail__item--content"><%= @item.shipping_method %></li>
      <li class="item-detail__item--content"><%= link_to "編集", edit_admin_item_path %>  <%= link_to "削除", admin_item_path(@item.id), method: :delete %></li>
    </ul>
  </div>
</div>



<%= javascript_include_tag 'public/items' %>