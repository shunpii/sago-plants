<div class="item">
  <div>
    <%= attachment_image_tag @item.item_images[0], :image, size: "500x450", id: 'item-image' %>
  </div>

  <div>
    <% @item.item_images.each do |image| %>
      <a class="item-image-mini"><%= attachment_image_tag image, :image, size: "150x150" %></a>
    <% end %>
  </div>
  <table class="item-unit">
    <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>サイズ</th>
      <td>H :<%= @item.size_height %></td>
      <td>W :<%= @item.size_width %></td>
    </tr>
    <tr>
      <th>税込価格</th>
      <td><%= @item.price %> 円</td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <th>発送方法</th>
      <td><%= @item.shipping_method %></td>
    </tr>
  </table>
  <%= link_to "一覧へ戻る", admin_items_path %>
  <%= link_to "編集", edit_admin_item_path %>
</div>


<%= javascript_include_tag 'public/items' %>