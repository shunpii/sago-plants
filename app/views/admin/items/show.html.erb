<div class="item">
  <%= attachment_image_tag @item, :image, size: "400x350",　format: 'jpeg' %>
  <table class="item-unit">
    <tbody>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>サイズ</th>
        <td>H :<%= @item.size_height %></td>
        <td>W :<%= @item.size_width %></td>
      </tr>
      <tr>
        <th>税込価格</th>
        <td><%= @item.price %> 円</td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>発送方法</th>
        <td><%= @item.shipping_method %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "一覧へ戻る", admin_items_path %>
  <%= link_to "編集", edit_admin_item_path(@item.id) %>
</div>