<h1><%= @customer.first_name %><%= @customer.last_name %>さん詳細</h1>

<table>
  <tbody>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <% if @customer.is_member %>
          有効
        <% else %>
          無効
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集", edit_admin_customer_path(@customer) %>



<!--注文履歴があればリンクの表示,ない場合はリンクなし-->
<% if @customer.orders.present? %>
  <%= link_to "注文履歴一覧を見る", admin_order_path %>
<% else %>
  注文履歴なし
<% end %>