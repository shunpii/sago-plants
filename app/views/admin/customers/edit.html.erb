
<h1><%= @customer.first_name %><%= @customer.last_name %>さん編集</h1>

<%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
  <table>
    <tbody>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= f.radio_button :is_member, true %>有効 <%= f.radio_button :is_member, false %>無効</td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "変更" %>
<% end %>
