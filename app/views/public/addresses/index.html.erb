<h1>配送先登録/一覧</h1>

<%= render 'list', address: @address %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集", edit_address_path(address.id) %>
          <%= link_to "削除", address_path(address.id), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
