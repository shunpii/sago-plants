<div class="public_address">
  <h2>配送先編集</h2>
  <%= form_with model: @address, url: address_path, local:true do |f| %>
    <table class="public_address_edit">
      <tr>
        <th class="public_address_edit-title">郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th class="public_address_edit-title">住所</th>
        <td><%= f.text_field :address, class: "public_address_edit-address-form" %></td>
      </tr>
      <tr>
        <th class="public_address_edit-title">宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="public_address-action"><%= f.submit %></div>
  <% end %>
</div>
