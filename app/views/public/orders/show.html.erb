<h1>注文履歴詳細</h1>

<div>
  <h3>注文内容</h3>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>サイズ</th>
        <th>税込価格</th>
      </tr>
    </thead>
    <tbody>
        <% @sum = 0 %>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>
              H <%= order_detail.item.size_height %>
              W <%= order_detail.item.size_width %>
            </td>
            <td><%= order_detail.price %></td>
          </tr>
        <% @sum += order_detail.price %>
        <% end %>
    </tbody>
  </table>
</div>

<div>
  <h3>請求情報</h3>
  <table>
    <tbody>
      <tr>
        <th>商品合計</th>
        <td><%= @sum %></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment = @sum + @order.shipping_cost %></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
    <h3>注文情報</h3>
    <table>
        <tbody>
            <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
                <th>配送先</th>
                <td>
                    <%= @order.postal_code %>
                    <%= @order.address %>
                    <%= @order.name %>
                </td>
            </tr>
            <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method %></td>
            </tr>
            <tr>
                <th>ステータス</th>
                <td><%= @order.status %></td>
            </tr>
        </tbody>
    </table>
</div>
