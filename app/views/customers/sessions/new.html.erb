<h2 class="title">ログイン</h2>
<%= render "customers/shared/error_messages", resource: resource %>

<h3 class="title-text">会員の方はこちら</h3>

<%= form_with model:@customer, url: customer_session_path, local: true do |f| %>
  <table class="list">
    <tbody>
      <tr>
        <th class="list-title">メールアドレス</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th class="list-title">パスワード</th>
        <td><%= f.password_field :password %></td>
      </tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "ログイン", class: "action" %>
  </div>
<% end %>

<h3 class="title-text">会員でない方</h3>
<div class="actions">
  <%= link_to "こちら", new_customer_registration_path %>から新規会員登録をお願い致します
</div>
