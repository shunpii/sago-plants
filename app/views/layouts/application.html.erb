<!DOCTYPE html>
<html>
  <head>
    <title>SagoPlants</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/18fdef0726.js" crossorigin="anonymous"></script>
  </head>

  <header>
    <% if admin_signed_in? %>
      <%= render 'layouts/admin_header' %>
    <% else %>
      <%= render 'layouts/public_header' %>
    <% end %>
  </header>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>

  <footer>
    <div class="footer-item"><%= link_to "お問い合わせ", inquiry_index_path %></div>
  </footer>
</html>
