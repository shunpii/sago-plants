<%= form_with model: @inquiry, url: inquiry_confirm_path, local:true do |f| %>
  <h1>お問い合わせ</h1>

  <% if @inquiry.errors.any? %>
    入力内容に誤りがあります
    <ul>
      <% @inquiry.errors.each do |attr, msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <table>
    <tbody>
      <tr>
        <th>名前(必須)</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>メールアドレス(必須)</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "確認" %>
<% end %>
